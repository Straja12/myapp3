<h1>Listing characters</h1>
 
 <hr />

<div class="container theme-showcase" role="main">
<div class="panel panel-info">

<table class="table">
  <tr>
    <th>Title</th>
    <th>Atributes</th>
  </tr>
 
  <% @characters.each do |f| %>
    <tr>
      <td><%= f.name %></td>
     
      <td><%= link_to 'Show', character_path(f) %></td>
      <td><%= link_to 'Delete', character_path(f),method: :delete,
       data: {confirm: 'Are you sure'} %> </td> 
    </tr>
  <% end %>
</table>
<hr />

<%= paginate @characters %>
<%= page_entries_info @characters %> <br>



<%= link_to 'New character', new_character_path %>
</div>
</div>